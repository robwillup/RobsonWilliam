<div class="table">
    <ul>
        @foreach (PostPreview postPreview in PostList)
        {
            <li @onclick="@(() => OnPostSelected(postPreview.title))">                           
                <img src="@postPreview.image" alt="">       
                <h3>@postPreview.title</h3>                    
                <p>
                    Posted on: @postPreview.date.ToShortDateString()
                    <br>
                    Tags: @postPreview.tags
                </p>                    
            </li>        
        }
    </ul>
</div>